{
  "name": "tailwind-storybook-controls-starter",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "clsx": "^1.1.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "^4.0.1",
    "typescript": "^4.0.3",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "prestart": "npm run tailwind:dev",
    "prebuild": "npm run tailwind:build",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "cc-jest -c .storybook",
    "eject": "react-scripts eject",
    "tailwind:build": "NODE_ENV=production postcss ./src/styles/tailwind.css -o ./src/tailwind.output.css",
    "tailwind:dev": "postcss ./src/styles/tailwind.css -o ./src/tailwind.output.css",
    "tailwind:watch": "postcss ./src/styles/tailwind.css -o ./src/tailwind.output.css --watch",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "lint": "eslint \"./src/**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "eslint --fix \"./src/**/*.{ts,tsx,js,jsx}\"",
    "format": "prettier --write \"./src/**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "lint-staged": {
    "*.{ts, tsx, js, jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "CI=true npm run test"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@component-controls/axe-plugin": "^1.42.9",
    "@component-controls/jest-snapshots": "^1.42.9",
    "@component-controls/storybook": "^1.42.9",
    "@component-controls/viewport-plugin": "^1.42.9",
    "@fullhuman/postcss-purgecss": "^3.0.0",
    "@storybook/addon-essentials": "^6.1.4",
    "@storybook/preset-create-react-app": "^3.1.5",
    "@storybook/react": "^6.1.4",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint": "^7.13.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest-dom": "^3.2.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "postcss-cli": "^8.2.0",
    "prettier": "^2.1.2",
    "react-is": "^17.0.1",
    "tailwindcss": "^1.9.6"
  },
  "jest": {
    "preset": "ts-jest"
  }
}
